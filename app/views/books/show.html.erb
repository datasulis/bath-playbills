<div class="container">
	<div class="row">
		<h2><%= @book.title %></h2>
		<h3>View <a href="<%= @book.catalogue_url %>">British Library catalogue record</a><h3>
		<p>Contains a total of <%= @book.pages.length %> images.</p>
		<!--
		<p>Playbill dates: <%= @book.start_date.to_formatted_s(:short) %> until <%= @book.end_date.to_formatted_s(:short) %> </p>
		-->
	</div>

	<% 4.times do %>	
		<div class="row">
		<% @book.pages.sample(3).each do |page| %>
		    <div class="col-md-4">
				<a href="<%= page_path(page) %>">
					<img class="thumbnail" src="<%= image(page) %>" />
				</a>
		    </div>	
		<% end %>
		</div>
	<% end %>
		
</div>